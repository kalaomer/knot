<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="tests/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
        >
    <testsuites>
        <testsuite name="Knot Dict Test Suite">
            <directory>./tests/Dict</directory>
        </testsuite>
    </testsuites>

    <testsuites>
        <testsuite name="Knot Exceptions Test Suite">
            <directory>./tests/Exceptions</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="./logs/report" charset="UTF-8"
           highlight="false" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="./logs/clover.xml"/>
        <log type="testdox-text" target="./logs/testdox.txt"/>
    </logging>
</phpunit>
